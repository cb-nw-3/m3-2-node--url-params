<div class="book-container">

    <div class="book-cover">
        <a href="http://localhost:8000/books/book/<%-(book.id) %>">
        <img src="<%- book.imgUrl %>" alt="cover of <%- book.title %>">
    </a>
    </div>

    <div class="book-info">
        <p class="book-title"> <%- book.title %></p>
        <p class="book-author"><%- book.author %></p>
    </div>

</div>